<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window sizebox="2,2,2,2" caption="0,0,0,30">
  <Font name="微软雅黑" size="16" bold="false" italic="false" />
  <Font name="微软雅黑" size="50" bold="false" italic="false" />
  <Font name="微软雅黑" size="16" default ="true" />
  <VerticalLayout width="60" height="30" bkcolor="#FFFAFAFA"
                  bordersize="1" bordercolor="FF909090"
                  inset="1,1,1,1">
    <!--caption-->
    <HorizontalLayout height="25" bkcolor="#FFF0F0F0">
      <Label text="Visual PE" float="true" pos="0,0,0,0" 
             width="100" height="30" textcolor="#FF000000"
             font="0" align="center" />
      <VerticalLayout />
      <VerticalLayout width="75">
        <Button name="minbtn" tooltip="min" float="true" 
                pos ="0,0,25,25" width="25" 
                normalimage="file='res\min.png'" 
                hotimage="file='res\minhot.png'"
								pushedimage="file='res\minpushed.png'"/>
        <Button name="maxbtn" tooltip="max" float="true"
                pos ="25,0,50,25" width="25"
                normalimage="file='res\max.png'"
                hotimage="file='res\maxhot.png'" 
								pushedimage="file='res\maxpushed.png'"/>
        <Button name="restorebtn" tooltip="restore" float="true" visible="false"
                pos ="25,0,50,25" width="25"
                normalimage="file='res\restore.png'"
                hotimage="file='res\restorehot.png'"
								pushedimage="file='res\restorepushed.png'"/>
        <Button name="closebtn" tooltip="close" float="true"
                pos ="50,0,75,25" width="25"
                normalimage="file='res\close.png'"
                hotimage="file='res\closehot.png'"
								pushedimage="file='res\closepushed.png'"/>
      </VerticalLayout>
    </HorizontalLayout>
    <!--body-->
    <VerticalLayout inset="5,5,5,0" childpadding="5">
      <!--buttons-->
      <HorizontalLayout height ="30">
        <VerticalLayout />
        <Button width="90" name="testbtn" text="Select File"
                normalimage="file='res\button.png'"
                hotimage="file='res\buttonhot.png'"
                pushedimage="file='res\buttonpushed.png'"/>
        <Button width="90" name="selectfile" text="Select File"
                normalimage="file='res\button.png'"
                hotimage="file='res\buttonhot.png'"
                pushedimage="file='res\buttonpushed.png'"/>
      </HorizontalLayout>
      <!--body-->
      <Container name="container" bkcolor="FF55555555">
        <Label text="Drag exe file here..." font="1" 
               align="center"
               textcolor="FFBBBBBB"/>
      </Container>
      <Progress name="scaleprogress" value="30" visible="false"
              bkimage="file='res\progressbk.png'"
              foreimage="res\progressfore.png"/>
    </VerticalLayout>
  </VerticalLayout>
</Window>