<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window sizebox="4,4,6,6" caption="0,0,0,30" >
  <Font name="微软雅黑" size="19" bold="false" italic="false" />
  <VerticalLayout width="60" height="30" bkcolor="#FFFAFAFA" inset="5,5,5,5">
    <!--caption-->
    <HorizontalLayout height="30" bkcolor="#FFF0F0F0">
      <Label text="Visual PE" float="true" pos="0,0,0,0" width="100" height="30" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" font="0" align="centerbottom" />
      <VerticalLayout />
      <VerticalLayout width="90">
        <Button name="minbtn" tooltip="min" float="true" 
                pos ="0,0,30,30" width="30" 
                normalimage="file='res\min.png'" 
                hotimage="file='res\minhot.png'"
								pushedimage="file='res\minpushed.png'"/>
        <Button name="maxbtn" tooltip="max" float="true"
                pos ="30,0,60,30" width="30"
                normalimage="file='res\max.png'"
                hotimage="file='res\maxhot.png'" 
								pushedimage="file='res\maxpushed.png'"/>
        <Button name="restorebtn" tooltip="restore" float="true" visible="false"
                pos ="30,0,60,30" width="30"
                normalimage="file='res\restore.png'"
                hotimage="file='res\restorehot.png'"
								pushedimage="file='res\restorepushed.png'"/>
        <Button name="closebtn" tooltip="close" float="true"
                pos ="60,0,90,30" width="30"
                normalimage="file='res\close.png'"
                hotimage="file='res\closehot.png'"
								pushedimage="file='res\closepushed.png'"/>
      </VerticalLayout>
    </HorizontalLayout>
    <!--toolbar-->
    <HorizontalLayout height ="30">
      <Button width="90" name="selectfile" text="Select File"/>
    </HorizontalLayout>
    <!--body-->
    <HorizontalLayout inset="5,5,5,5">
      <Container bkcolor="FFAAAAAA"/>
      <Progress hor="false" width="10" />
    </HorizontalLayout>
  </VerticalLayout>
</Window>